<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/track_vehicleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_action_cancel"/>

        <com.rey.material.widget.TextView
            android:id="@+id/track_vehicleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/track_mapLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/track_overlayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:id="@+id/track_actionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_action_cancel"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/track_stateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                </LinearLayout>

            </FrameLayout>

            <com.rey.material.widget.Button
                android:id="@+id/track_startButton"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@color/card"
                android:text="Start"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="24dp"
                app:rd_backgroundColor="@color/card"/>

            <com.rey.material.widget.TextView
                android:id="@+id/track_waitingLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:text="Waiting for a GPS trace..."
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <com.rey.material.widget.TextView
                android:id="@+id/track_timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="48dp"/>

            <TableLayout
                android:id="@+id/track_statsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_distance"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/track_distanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="@string/track_distance_placeholder"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_speed"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/track_speedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="@string/track_speed_placeholder"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/white"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>

                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_average_speed"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/track_averageSpeedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="@string/track_speed_placeholder"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/white"/>
                </TableRow>

            </TableLayout>

            <com.rey.material.widget.Button
                android:id="@+id/track_actionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Visited client"
                app:fab_backgroundColor="@color/colorAccent"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>